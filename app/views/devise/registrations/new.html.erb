<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card">
        <h2 class="card-title text-center">Register </h2>
        <div class="card-body py-md-4">
          <form _lpchecked="1">
            <div class="form-group devise">
              <%= f.email_field :email, class: "form-control", id: "email", placeholder: "Email", autofocus: true, autocomplete: "email" %>
            </div>                      
            <div class="form-group devise">
               <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Password", autocomplete: "new-password" %>
            </div>
            <div class="form-group devise">
              <%= f.password_field :password_confirmation, class: "form-control", id: "confirm-password", placeholder: "Confirm Password", autocomplete: "new-password" %>
            </div>
            <div class="d-flex flex-row align-items-center justify-content-between">
              <%- if controller_name != 'sessions' %>
                <%= link_to "Log in", new_session_path(resource_name) %><br />
              <% end %>
                <%= f.submit "Sign up", class: "btn devise-btn btn-primary" %>
            </div>
            <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
              <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
            <% end %>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>