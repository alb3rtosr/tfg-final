<%= tinymce_assets %>

<%= tinymce %>
<%= simple_form_for [@topic, @post] do |form| %>
  <% if @post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="topics col-sm-2">
      <%= form.select(
        :topic_id, @topics, 
        { include_blank: "SELECT A TOPIC" },
        class: "form-control custom-dropdown", 
      ) %>
    </div>
    <div class="form-group">
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, class: "form-control tinymce" %>
    </div>

    <div class="form-group">
      <%= form.label :body, style: "display: block" %>
      <%= form.text_area :body, class: "form-control tinymce" %>
    </div>
    <div class="form-group">
      <%= form.submit "Update Post", class:"btn btn-primary" %> |
      <%= link_to "Show this post", @post, class: "btn btn-primary" %> |
      <%= link_to "Back to posts", posts_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
