<div class="container">
  <%= simple_form_for @project do |form| %>
    <div class="form-group">
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
      
    <div class="form-group">
      <%= form.label :description, style: "display: block" %>
      <%= form.text_field :description, class: "form-control" %>
    </div>


    <div class="container col-sm-12 row">
      <div class="col-sm-4">
        <%= form.label :state, style: "display: block" %>
        <%= form.select :state, options_for_select(Project.states), selected: @project.state, prompt: "select project state" %>
      </div>


      <div class= "topics col-sm-4">
        <div class="form-group">
          <%= form.label :visibility, style: "display: block" %>
          <%= form.select :visibility, ['public', 'private'], prompt: "select project visibility", class: "form-control custom-project-dropdown"%>
        </div>
      </div>
      
      <div class= "col-sm-4">
        <div class="form-group">
          <%= form.label :files, style: "display: block" %>
          <%= form.file_field :files, multiple: true %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.submit "Create Post", class:"btn btn-primary"  %>
    </div>

    <br>

    <%= link_to "Back to projects", projects_path %>
  <% end %>
  <br>

  <%= link_to "Show this project", @project %> |
  <%= link_to "Back to projects", projects_path %>
</div>